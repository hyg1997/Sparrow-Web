@model Sparrow_Delivery.Models.Usuario

@{
    ViewBag.Title = "Entrar";
    ViewBag.Subtitle = "Por favor inicia sesión o regístrate para continuar";
}
<section class="shop-content">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="row shop-login">
                    <div class="col-md-12">
                        <div class="box-content">
                            <h3 class="text-center">Cliente registrado</h3>
                            <br>
                            <form class="logregform" method="post">
                                @Html.AntiForgeryToken()
                                <div class="row">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>E-mail</label>
                                            @Html.TextBoxFor(model=>model.email, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="row">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>Contraseña</label>
                                            @Html.TextBoxFor(model => model.password, new { @class = "form-control", type = "password"})
                                            @Html.ValidationMessage("notFound", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <button type="submit" class="btn btn-default pull-right">Entrar</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

