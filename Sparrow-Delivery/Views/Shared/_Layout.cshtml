@using Sparrow_Delivery.Helpers;
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <title>Sparrow</title>

    <!-- SEO -->
    <meta name="description" content="Sparrow, delivery de comida">
    <meta name="keywords" content="sparrow">

    <!-- Favicons -->
    <link rel="shortcut icon" href="img/favicon.ico">

    <!-- Responsive Tag -->
    <meta name="viewport" content="width=device-width">

    <!-- CSS Files -->
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" />
    <link rel="stylesheet" href="~/Content/plugin.css">
    <link rel="stylesheet" href="~/Content/main.css">

    <!--[if lt IE 9]>
            <script src="js/vendor/html5-3.6-respond-1.4.2.min.js"></script>
        <![endif]-->
</head>

<body>
    <!--[if lt IE 8]>
        <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    <!-- Preloder-->
    <div class="preloder animated">
        <div class="scoket">
            <img src="img/preloader.svg" alt="" />
        </div>
    </div>

    <div class="body">

        <div class="main-wrapper">
            <!-- Navigation-->
            <nav class="navbar navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="/Producto/Index">
                            <img src="https://i.imgur.com/66XxZ6p.png" alt="nav-logo">
                        </a>
                    </div>
                    <div id="navbar" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav navbar-right">
                            @if(SessionHelpers.userID == 0)
                            {
                                <li><a href="/Usuario/Login">Iniciar Sesión</a></li>
                                <li><a href="/Usuario/Register">Registrarse</a></li>
                            }
                            else
                            {
                                <li><a href="/Producto/Index" role="button">Inicio</a></li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Cuenta<span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="#l">Mis pedidos</a></li>
                                        <li><a href="#">Cerrar Sesión</a></li>
                                    </ul>
                                </li>
                                <li role="button">
                                    <a class="css-pointer dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-shopping-cart fsc pull-left"></i><span class="cart-number">2</span><span class="caret"></span></a>
                                </li>
                            }
                        </ul>
                    </div>
                    <!--/.navbar-collapse -->
                </div>
            </nav>

            <section class="page_header">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <h2 class="text-uppercase">@ViewBag.Title</h2>
                            <p>@ViewBag.Subtitle</p>
                        </div>
                    </div>
                </div>
            </section>

            <section id="contenido">
                @RenderBody()
            </section>
            <!-- Footer-->
            <section class="footer">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4 col-sm-12">
                            <h1>Acerca de nosotros</h1>
                            <p>
                                Sparrow te permite realizar pedidos online de tus comidas favoritas.
                                Este es un trabajo final para el curso de Aplicaciones Web en UPC.
                            </p>

                        </div>

                        <div class="col-md-4  col-sm-6 col-md-offset-4 col-sm-offset-6">
                            <h1>Conócenos</h1>

                            <div class="footer-address">
                                <p><i class="fa fa-map-marker"></i>Av. Salaverry 2221 </p>
                                <p><i class="fa fa-phone"></i>Telefono: (51) 33333333</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Footer - Copyright -->
                <div class="footer-copyrights">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <p><i class="fa fa-copyright"></i> 2018. Sparrow todos los derechos reservados. Desarrollado con <i class="fa fa-heart primary-color"></i> en Lima</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>

    </div>

    <!-- Javascript -->
    <script src="~/Scripts/vendor/jquery-1.11.2.min.js"></script>
    <script src="~/Scripts/vendor/bootstrap.min.js"></script>
    <script src="~/Scripts/vendor/jquery.flexslider-min.js"></script>
    <script src="~/Scripts/vendor/owl.carousel.min.js"></script>
    <script src="~/Scripts/vendor/velocity.min.js"></script>
    <script src="~/Scripts/vendor/velocity.ui.min.js"></script>
    <script src="~/Scripts/vendor/bootstrap-datepicker.min.js"></script>
    <script src="~/Scripts/vendor/bootstrap-clockpicker.min.js"></script>
    <script src="~/Scripts/vendor/jquery.magnific-popup.min.js"></script>
    <script src="~/Scripts/vendor/isotope.pkgd.min.js"></script>
    <script src="~/Scripts/vendor/slick.min.js"></script>
    <script src="~/Scripts/vendor/wow.min.js"></script>
    <script src="~/Scripts/animation.js"></script>
    <script src="~/Scripts/vendor/jquery.stellar.js"></script>
    <script src="~/Scripts/main.js"></script>

</body>

</html>